      "limit": 1
    },
    {
      "type": "cart_status",
      "name": "Cart Link",
      "limit": 1
    }
  ],
  "default":
  {
    "blocks":
    [
      {
        "type": "featured_image"
      },
      {
        "type": "cart_status"
      },
      {
        "type": "navigation"
      },
      {
        "type": "featured_text"
      },
      {
        "type": "search_box"
      },
      {
        "type": "social_icons"
      }
    ]
  }
