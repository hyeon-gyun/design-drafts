{% comment %}
  mobile-navigation.liquid
  Handles the theme's mobile navigation.
  Usage:
  {% section 'mobile-navigation' %}
{% endcomment %}
{% liquid

  # Default state for language and currency disclosures.
  assign locale_selector = false
  assign country_selector = false

  if section.settings.show_country_selector and localization.available_countries.size > 1
    assign country_selector = true
  endif

  if section.settings.show_locale_selector and shop.published_locales.size > 1
    assign locale_selector = true
  endif
%}

{{ 'section-mobile-navigation.css' | asset_url | stylesheet_tag }}
{% if country_selector or locale_selector %}
{{ 'component-disclosures.css' | asset_url | stylesheet_tag }}
{% endif %}

<nav class="mobile-menu" role="navigation" data-section-id="{{ section.id }}" data-section-type="mobile-navigation">
  <div class="slideout__trigger--close">
    <button class="slideout__trigger-mobile-menu js-slideout-close" data-slideout-direction="left" aria-label="Close navigation" tabindex="0" type="button" name="button">
      <div class="icn-close"></div>
    </button>
  </div>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'search_box' %}
        <div class="mobile-menu__block mobile-menu__search" {{ block.shopify_attributes }}>
          {%- if settings.predictive_search_enabled -%}
          <predictive-search
            data-routes="{{ routes.predictive_search_url | default: '/search/suggest' }}"
            data-input-selector='input[name="q"]'
            data-results-selector="#predictive-search-mobile"
            >
          {%- endif -%}
            <form action="{{ routes.search_url }}" method="get">
              <label class="visually-hidden" for="searchbox-{{ section.id }}">{{ 'sections.search.placeholder' | t }}</label>
              <input
                type="text"
                name="q"
                id="searchbox-{{ section.id }}"
                class="searchbox__input"
                placeholder="{{ 'sections.search.placeholder' | t }}"
                value="{{ search.terms | escape }}"
                {%- if settings.predictive_search_enabled -%}
                  role="combobox"
                  aria-expanded="false"
                  aria-owns="predictive-search-results-list"
                  aria-controls="predictive-search-results-list"
                  aria-haspopup="listbox"
                  aria-autocomplete="list"
                  autocorrect="off"
                  autocomplete="off"
                  autocapitalize="off"
                  spellcheck="false"
                {%- endif -%} />
              <input name="options[prefix]" type="hidden" value="last">

              {% if settings.search_show_products_only %}
                <input type="hidden" name="type" value="product">
              {% endif %}

              {%- if settings.predictive_search_enabled -%}
                <div id="predictive-search-mobile" class="predictive-search" tabindex="-1"></div>
              {%- endif -%}
            </form>
          {%- if settings.predictive_search_enabled -%}
          </predictive-search>
          {%- endif -%}
        </div>
      {% when 'navigation' %}

        {% assign unique_id = block.id | slice: 0, 7 %}
        {% assign mobile_menu_allow_multiple = false %}

        <ul class="js-accordion js-accordion-mobile-nav c-accordion c-accordion--mobile-nav c-accordion--{{ unique_id }}"
            id="c-accordion--{{ unique_id }}"
            {% if mobile_menu_allow_multiple %}

            data-accordion-allow-multiple
            {% endif %}

             {{ block.shopify_attributes }}>

          {% assign menu = linklists[block.settings.main_nav] %}

          {% for link in menu.links %}

            {% assign level_one_nested_link_count = 0 %}

            {% if link.links != blank %}

              {% assign level_one_nested_link_count = level_one_nested_link_count | plus: 1 %}

              {% assign level_one_link_index = forloop.index %}
              {% assign accordion_content_id = 'c-accordion__panel--' | append: unique_id | append: '-' | append: level_one_link_index %}

              <li class="js-accordion-header c-accordion__header">
                <a class="js-accordion-link c-accordion__link" href="{{ link.url }}">{{ link.title | escape }}</a>
                <button class="dropdown-arrow" aria-label="{{ link.title | escape }}" data-toggle="accordion" aria-expanded="false" aria-controls="{{ accordion_content_id }}" >
                  {% render 'snip-icons',
                   wrapper: '.c-accordion__header',
                   type: 'apollo',
                   icon: 'down-carrot',
                   classes: 'c-accordion__header--icon vib-center',
                   size: '6px',
                   fill: section.settings.link_color,
                   hover: section.settings.link_color %}
                </button>
              </li>

              <li class="c-accordion__panel {{ accordion_content_id }}" id="{{ accordion_content_id }}" data-parent="#c-accordion--{{ unique_id }}">

                {% assign level_two_unique_id = unique_id | append: '-' | append: level_one_nested_link_count %}

                <ul class="js-accordion js-accordion-mobile-nav c-accordion c-accordion--mobile-nav c-accordion--mobile-nav__inner c-accordion--{{ level_two_unique_id }}" id="c-accordion--{{ level_two_unique_id }}">

                  {% for sub_link in link.links %}
                    {% if sub_link.links != blank %}

                        {% assign level_two_link_index = forloop.index %}
                        {% assign level_two_accordion_content_id = 'c-accordion__panel--' | append: unique_id | append: '-' | append: level_one_link_index | append: '-' | append: level_two_link_index %}

                        <li class="js-accordion-header c-accordion__header">
                          <a class="js-accordion-link c-accordion__link" href="{{ sub_link.url }}">{{ sub_link.title | escape }}</a>
                          <button class="dropdown-arrow" aria-label="{{ sub_link.title | escape }}" data-toggle="accordion" aria-expanded="false" aria-controls="{{ level_two_accordion_content_id }}" >
                            {% render 'snip-icons',
                               wrapper: '.c-accordion__header',
                               type: 'apollo',
                               icon: 'down-carrot',
                               classes: 'c-accordion__header--icon vib-center',
                               size: '6px',
                               fill: section.settings.link_color,
                               hover: section.settings.link_color %}
                          </button>
                        </li>

                        <li class="c-accordion__panel {{ level_two_accordion_content_id }}" id="{{ level_two_accordion_content_id }}" data-parent="#c-accordion--{{ level_two_unique_id }}">
                          <ul>
                            {% for sub_sub_link in sub_link.links %}

                              <li>
                                <a class="js-accordion-link c-accordion__link" href="{{ sub_sub_link.url }}">{{ sub_sub_link.title }}</a>
                              </li>

                            {% endfor %}
                          </ul>
                        </li>
                    {% else %}
                    <li>
                      <a class="js-accordion-link c-accordion__link" href="{{ sub_link.url }}">{{ sub_link.title | escape }}</a>
                    </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </li>
            {% else %}
            <li>
              <a class="js-accordion-link c-accordion__link" href="{{ link.url }}">{{ link.title | escape }}</a>
            </li>
            {% endif %}
          {% endfor %}
          {% if shop.customer_accounts_enabled and block.settings.customer_account_links %}
            {% if customer  %}
              <li class="mobile-menu__item">
                <a href="{{ routes.account_url }}">
                  {% render 'snip-icons',
                     wrapper: '.mobile-menu__item',
                     type: 'icon-theme',
                     icon: 'user',
                     classes: 'mobile-menu__item--icon vib-center',
                     size: '16px',
                     fill: section.settings.link_color,
                     hover: section.settings.link_color %}
                  <span class="mobile-menu__item--text vib-center">&nbsp;&nbsp;{{ 'general.mobile_nav.account' | t }}</span>
                </a>&nbsp;&nbsp;
                <a href="{{ routes.account_logout_url }}">
                  {% render 'snip-icons',
                     wrapper: '.mobile-menu__item',
                     type: 'icon-theme',
                     icon: 'user-logout',
                     classes: 'mobile-menu__item--icon vib-center',
                     size: '16px',
                     fill: section.settings.link_color,
                     hover: section.settings.link_color %}
                  <span class="mobile-menu__item--text vib-center">&nbsp;&nbsp;{{ 'general.mobile_nav.logout' | t }}</span>
                </a>
              </li>
            {% else %}
              <li class="mobile-menu__item">
                <a href="{{ routes.account_login_url }}">
                  {% render 'snip-icons',
                     wrapper: '.mobile-menu__item',
                     type: 'icon-theme',
                     icon: 'user',
                     classes: 'mobile-menu__item--icon vib-center',
                     size: '16px',
                     fill: section.settings.link_color,
                     hover: section.settings.link_color %}
                  <span class="mobile-menu__item--text vib-center">&nbsp;&nbsp;{{ 'general.mobile_nav.login' | t }}</span>
                </a>
              </li>
            {% endif %}
          {% endif %}
        </ul><!-- /.c-accordion.c-accordion--mobile-nav -->
      {% when 'social_icons' %}
        <div class="mobile-menu__block mobile-menu__social text-center" {{ block.shopify_attributes }}>
          {% render 'social-icons', fill_color: block.settings.icon_color, hover_color: block.settings.icon_hover_color, wrapper: '.mobile-menu__social' %}
        </div>
      {% when 'featured_image' %}
        <div class="mobile-menu__block mobile-menu__featured-image{% if block.settings.full_featured_image %} mobile-menu__featured-image--full-width{% endif %}" {{ block.shopify_attributes }}>
          {% if block.settings.featured_image_link %}<a href="{{ block.settings.featured_image_link }}">{% endif %}
            {% render 'basic-responsive-image' type: block.settings.featured_image, width: 400 %}
          {% if block.settings.featured_image_link %}</a>{% endif %}
        </div>
      {% when 'featured_text' %}
        <div class="mobile-menu__block mobile-menu__featured-text text-center" {{ block.shopify_attributes }}>
          {% if block.settings.featured_text != blank %}
          <div class="rte">
            {{ block.settings.featured_text }}
          </div><!-- /.rte -->
          {% endif %}
        </div>
      {% when 'cart_status' %}
        <div class="mobile-menu__block mobile-menu__cart-status" {{ block.shopify_attributes }}>
          <a class="mobile-menu__cart-icon" href="{{ routes.cart_url }}">
            <span class="vib-center">{{ 'cart.general.title' | t }}</span>
            (<span class="mobile-menu__cart-count js-cart-count vib-center">{{ cart.item_count }}</span>)
            {% render 'snip-icons',
             wrapper: '.mobile-menu__cart-icon',
             type: 'icon-theme',
             icon: 'bag',
             classes: 'vib-center',
             size: '20px',
             fill: section.settings.link_color,
             hover: section.settings.link_color %}
          </a>
        </div>
    {% endcase %}
  {% endfor %}

  {%- if locale_selector or country_selector -%}
  <div class="mobile-menu__block mobile-menu__localization--container">
  {%- if locale_selector -%}
     <div class="mobile-menu__language--selector mobile-menu__localization--item">
        <div class="selectors-form__item">
          <h5 class="visually-hidden" id="mobile-lang-heading">
            {{ 'general.language.dropdown_label' | t }}
          </h5>
          <noscript>
            {%- form 'localization', id: 'MobileLanguageFormNoScript', class: 'selectors-form', data-disclosure-form: '' -%}
              <select name="locale_code" class="localization-selector" aria-labelledby="mobile-lang-heading">
                <option value="" disabled>{{ 'general.language.dropdown_label' | t }}</option>
                {%- for language in localization.available_languages -%}
                  <option value="{{ language.iso_code }}" lang="{{ language.iso_code }}" {%- if language.iso_code == localization.language.iso_code %} selected{% endif %}>
                    {{ language.endonym_name | capitalize }}
                  </option>
                {%- endfor -%}
              </select>
              <button class="localization-form__noscript-btn button mb0 v-center button-as-link">
                {% render 'snip-icons',
                   wrapper: '.mobile-menu__language--selector',
                   type: 'apollo',
                   icon: 'checkmark',
                   size: '12px',
                   fill: 'var(--text-color)',
                   hover: 'var(--background)' %}
              </button>
            {%- endform -%}
          </noscript>
          {%- form 'localization', id: 'MobileLanguageForm', class: 'selectors-form', data-disclosure-form: '' -%}
          <div class="disclosure relative" data-disclosure-locale>
            <button type="button" class="disclosure__toggle" aria-expanded="false" aria-controls="lang-list" aria-describedby="mobile-lang-heading" data-disclosure-toggle>
              {{ form.current_locale.iso_code }}
            </button>
            <div id="mobile--lang-list" class="disclosure-list" data-disclosure-list>
              <ul class="disclosure--ul">
                {% for locale in form.available_locales %}
                  <li class="disclosure-list__item {% if locale.iso_code == form.current_locale.iso_code %}disclosure-list__item--current{% endif %}">
                    <a class="disclosure-list__option" href="#" title="{{ locale.endonym_name | escape }}" lang="{{ locale.iso_code }}" {% if locale.iso_code == form.current_locale.iso_code %}aria-current="true"{% endif %} data-value="{{ locale.iso_code }}" data-disclosure-option>
                      {{ locale.endonym_name }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
            <input type="hidden" name="locale_code" id="LocaleSelector" value="{{ form.current_locale.iso_code }}" data-disclosure-input/>
          </div><!-- /.disclosure -->
          {%- endform -%}
        </div><!-- /.selectors-form__item -->
    </div>
  {%- endif -%}
  {%- if country_selector -%}
    <div class="mobile-menu__country--selector mobile-menu__localization--item">
      <div class="selectors-form__item">
        <h5 class="visually-hidden" id="currency-heading">
          {{ 'general.currency.dropdown_label' | t }}
        </h5>
        <noscript>
          {%- form 'localization', id: 'MobileCountryFormNoScript', class: 'selectors-form', data-disclosure-form: '' -%}
            <select class="localization-selector link" name="country_code" aria-labelledby="currency-heading">
              <option value="" disabled>{{ 'general.currency.dropdown_label' | t }}</option>
              {%- for country in localization.available_countries -%}
                <option value="{{ country.iso_code }}" {%- if country.iso_code == localization.country.iso_code %} selected{% endif %}>
                  {{ country.name }} ({{ country.currency.iso_code }} {{ country.currency.symbol }})
                </option>
              {%- endfor -%}
            </select>
            <button class="localization-form__noscript-btn button mb0 btn-as-link inline-block v-center button-as-link">
              {% render 'snip-icons',
                 wrapper: '.mobile-menu__country--selector',
                 type: 'apollo',
                 icon: 'checkmark',
                 size: '12px',
                 fill: 'var(--text-color)',
                 hover: 'var(--background)' %}
            </button>
          {%- endform -%}
        </noscript>
        {%- form 'localization', id: 'MobileCountryForm', class: 'selectors-form', data-disclosure-form: '' -%}
          <div class="disclosure relative" data-disclosure-currency>
            <button type="button" class="disclosure__toggle" aria-expanded="false" aria-controls="currency-list" aria-describedby="currency-heading" data-disclosure-toggle>
              {% if section.settings.show_flag %}
                <span class="country--flag">
                  {{ localization.country | image_url: width: 32 | image_tag: class: 'disclosure__toggle__flag', loading: 'eager', fetchpriority: 'high', alt: country.name }}
                </span>
              {% endif %}
              {{ localization.country.currency.iso_code }} {{ localization.country.currency.symbol }}
            </button>
            <div id="mobile--currency-list" class="disclosure-list" data-disclosure-list>
              <ul class="disclosure--ul">
              {%- for country in localization.available_countries -%}
                <li class="disclosure-list__item {% if country.iso_code == localization.country.iso_code %}disclosure-list__item--current{% endif %}">
                  <a class="disclosure-list__option" href="#" title="{{ country.iso_code | escape }}" {% if country.iso_code == localization.country.iso_code %}aria-current="true"{% endif %} data-value="{{ country.iso_code }}" data-disclosure-option>
                    {% if section.settings.show_flag %}
                      <span class="country--flag">
                        {{ country | image_url: width: 32 | image_tag: class: 'disclosure__toggle__flag', loading: 'lazy', alt: country.name }}
                      </span>
                    {% endif %}
                    {{ country.name }} 
                    <span class="localization-form__currency">({{ country.currency.iso_code }} {{ country.currency.symbol }})</span>
                  </a>
                </li>
              {%- endfor -%}
              </ul>
            </div>
            <input type="hidden" name="country_code" id="MobileCurrencySelector" value="{{ localization.country.iso_code }}" data-disclosure-input/>
          </div>
        {%- endform -%}
      </div>
    </div>
  {%- endif -%}
  </div>
  {%- endif -%}

  {% style %}
  #shopify-section-{{ section.id }} {
    --background: {{ section.settings.background_color }};
    --text-color: {{ section.settings.link_color }};
    --dotted-color: {{ section.settings.border_color }};
  }
  {% endstyle %}
</nav>

