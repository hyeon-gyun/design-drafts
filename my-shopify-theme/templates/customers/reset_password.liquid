
<div id="customer-wrapper reset--password_page" class="grid__wrapper" style="margin-top: 80px; margin-bottom: 80px;">

  <div id="template" class="span-6 auto push-3">
    <div class="template_header">
      <h2 class="title">{{ 'customer.reset_password.title' | t }}</h2>
      <p>{{ 'customer.reset_password.subtext' | t }}</p>
    </div>

    {% form 'reset_customer_password' %}
    {{ form.errors | default_errors }}

    <div id="password" class="clearfix large_form">
      <label class="large" for="customer_password">{{ 'customer.reset_password.password' | t }}</label>
      <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="clearfix large_form">
      <label class="large" for="customer_password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
    </div>
    <div class="action_bottom">
      <input class="secondary button" type="submit" value="{{ 'customer.reset_password.submit' | t }}" />
    </div>
    {% endform %}
  </div>
</div>